{
  "manifest_version": 2,

  "name": "BSQ Extension",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  
  "background": {
      "page": "background.html"
  },
  
  //"page_action": {
  //  "default_icon": {                    // optional
  //    "16": "imageinfo-16.png"           // optional      
  //  }    
  //},
  
  "icons": {
        "16": "imageinfo-16.png"        
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "permissions": [ "tabs", "http://*/*", "https://*/*", "https://www.google.com/accounts/OAuthGetRequestToken", "https://www.google.com/accounts/OAuthAuthorizeToken", "https://www.google.com/accounts/OAuthGetAccessToken", "https://picasaweb.google.com/data/*", "contextMenus" ],

  "browser_action": {
    "default_icon": "icon.png"    
  }
}